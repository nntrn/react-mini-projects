{
  "name": "react-mini-projects",
  "version": "1.0.0",
  "description": "react sandbox for mini projects/demos",
  "private": true,
  "keywords": [
    "react",
    "sandbox",
    "demos"
  ],
  "author": "annie tran",
  "homepage": "https://nntrn.github.io/react-mini-projects/",
  "dependencies": {
    "axios": "^0.19.0",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.3.0"
  },
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "husky": "^2.4.1",
    "install": "^0.12.2",
    "lint-staged": "^8.2.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "clear-babel-cache": "rm -rf ./node_modules/.cache/babel-loader/*",
    "clean-build": "rm -rf build/ ",
    "css-lint": "stylelint \"src/**/*.scss\" --fix --cache --cache-location .cache/.stylelintcache",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint": "eslint . --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "eslintIgnore": [
    "lib/*",
    "node_modules/**",
    "**/node_modules",
    "coverage/",
    "**/.cache",
    "**/public"
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  }
}
