{
  "name": "react-mini-projects",
  "version": "1.0.0",
  "description": "react sandbox for mini projects/demos",
  "private": true,
  "keywords": [
    "react",
    "sandbox",
    "demos"
  ],
  "author": "annie tran",
  "homepage": "https://nntrn.github.io/react-mini-projects/",
  "dependencies": {
    "react": "^16.8.6",
    "react-chartjs": "^1.2.0",
    "react-dom": "^16.8.6",
    "react-draggable": "^3.3.0",
    "react-icomoon": "^1.0.1",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^3.0.1",
    "react-transition-group": "^4.0.1"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2
  },
  "stylelint": {
    "extends": [
      "./node_modules/prettier-stylelint/config.js"
    ],
    "rules": {
      "string-quotes": "single"
    }
  },
  "scripts": {
    "clear-babel-cache": "rm -rf ./node_modules/.cache/babel-loader/*",
    "prettier": "prettier --write src/**/*.{js,jsx,css,scss}",
    "clean-build": "rm -rf build/ ",
    "build-css": "node-sass-chokidar ./src/ -o ./src/css/ && npm run prettier",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "gh-pages": "^2.0.1",
    "node-sass-chokidar": "^1.3.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "prettier-stylelint": "^0.4.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
